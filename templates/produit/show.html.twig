{% extends 'base.html.twig' %}
{% block style %}
    <link href="https://codepen.io/kathykato/pen/57f0b5b76e6aa7e4917e08b81d378d7b" rel="stylesheet" >
    <link href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet" >
    <link rel="stylesheet" href="{{ asset('assets/show.css') }}" type="text/css" />
    <script src="{{ asset('assets/show.js') }}" type="text/javascript"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
{% endblock %}
{% block title %}Produit{% endblock %}

{% block body %}
    <main>
        <div class="container">
            <div class="grid second-nav">
                <div class="column-xs-12">
                    <nav>
                        <ol class="breadcrumb-list">
                            <li class="breadcrumb-item"><a href="{{ path('acceuil_index') }}">Home</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('produit_vente') }}">Produits</a></li>
                            <li class="breadcrumb-item active">{{ produit.libelle }}</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="grid product">
                <div class="column-xs-12 column-md-7">
                    <div class="product-gallery">
                        <div class="product-image">
                            <img class="active" src="{{ produit.imagePrincipale.chemin }}">
                        </div>
                        <ul class="image-list">
                            {% for image in image %}
                            <li class="image-item"><img src="{{ image.chemin }}"></li>
                            {% else %}
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="column-xs-12 column-md-5">
                    <h1>{{ produit.libelle }}</h1>
                    <h2>{{ produit.prixht }} €</h2>
                    <div class="description">
                        <p>Il en reste : {{ produit.stock }}</p>
                        <p>{{ produit.description }}</p>
                        </div>
                    <a href="{{ path('cart_add', {'id' : produit.id}) }}" ><button type="button" class="btn btn-primary">
                        Commander
                        </button></a>

                </div>
            </div>

            <div class="grid related-products">

                <div class="column-xs-12">
                    <h3>You may also like</h3>
                </div>
                {% for plus in plus %}
                <div class="column-xs-12 column-md-4">
                    <img src="{{ plus.imagePrincipale.chemin }}">
                    <h4>{{ plus.libelle }}</h4>
                    <p class="price">{{ plus.prixht }} €</p>
                    <a href="{{ path('produit_show', {'id': plus.id}) }}"><button class="add-to-cart" >Voir</button></a>
                </div>
                {% else %}
                {% endfor %}
            </div>
        </div>
    </main>


    <a href="{{ path('produit_index') }}">back to list</a>
{% endblock %}
